}
.top-bar .top-bar-left {
    padding-left: 32rpx;
    float: left;
}
.top-bar .top-bar-left image {
      padding-top: 10rpx;
      width: 68rpx;
      height: 68rpx;
      border-radius: 16rpx;
}
