.top-bar {
  position: fixed;
  z-index: 1001;
  top: 0;
  left: 0;
  height: 88rpx;
  padding-top: var(--status-bar-height);
  width: 100%;
}
.top-bar .top-bar-left {
    padding-left: 32rpx;
    float: left;
}
.top-bar .top-bar-left image {
      padding-top: 10rpx;
      width: 68rpx;
      height: 68rpx;
      border-radius: 16rpx;
}
.top-bar .top-bar-left .back-img {
      margin-top: 21rpx;
      width: 26rpx;
      height: 46rpx;
}
.top-bar .top-bar-left .text {
      font-size: 32rpx;
      font-weight: 500;
      color: #272832;
      line-height: 88rpx;
}
.top-bar .top-bar-center {
    position: absolute;
    text-align: center;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}
.top-bar .top-bar-center .logo {
      padding-top: 19rpx;
      width: 88rpx;
      height: 42rpx;
}
.top-bar .top-bar-right {
    float: right;
    padding-right: 14rpx;
}
.top-bar .top-bar-right .search {
      width: 88rpx;
      height: 88rpx;
      display: inline-block;
}
.top-bar .top-bar-right .add {
      width: 88rpx;
      height: 88rpx;
      display: inline-block;
      /* padding-right: 14rpx; */
}
.top-bar .top-bar-right .text {
      font-size: 32rpx;
      font-weight: 500;
      color: #272832;
      line-height: 88rpx;
      /* background: #aaa; */
      padding-right: 32rpx;
}
.top-bar .top-bar-right .more-img {
      height: 88rpx;
      padding-top: 10rpx;
      padding-right: 32rpx;
}
.top-bar .top-bar-right .more-img image {
        width: 52rpx;
        height: 12rpx;
}
.content {
  padding-top: var(--status-bar-height);
}
.bottom-bar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  padding-top: 10rpx;
  padding-bottom: var(--status-bar-height);
}
.btn {
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #272832;
  height: 80rpx;
  border-radius: 10rpx;
}
.top-bar {
  background: rgba(255, 255, 255, 0.96);
  border-bottom: 1rpx solid black;
}
.top-bar .top-bar-right image {
    padding: 18rpx;
    width: 52rpx;
    height: 52rpx;
}
.main {
  padding-top: 104rpx;
  padding-bottom: 32rpx;
}
.friend-list {
  height: 96rpx;
  padding: 16rpx 32rpx;
}
.friend-list:active {
    background-color: #f3f4f6;
}
.friend-list .friend-list-l {
    float: left;
    position: relative;
}
.friend-list .friend-list-l image {
      width: 96rpx;
      height: 96rpx;
      border-radius: 20rpx;
      background-color: #ffe431;
}
.friend-list .friend-list-l .tip {
      position: absolute;
      z-index: 100;
      top: -8rpx;
      min-width: 20rpx;
      left: 68rpx;
      height: 36rpx;
      background: #ff5d5b;
      border-radius: 18rpx;
      padding: 0 8rpx;
      font-size: 24rpx;
      color: #fff;
      line-height: 36rpx;
      text-align: center;
}
.friend-list .friend-list-r {
    padding-left: 128rpx;
}
.friend-list .friend-list-r .top {
      height: 50rpx;
}
.friend-list .friend-list-r .top .name {
        float: left;
        font-size: 36rpx;
        font-weight: 400;
        color: #272832;
        line-height: 50rpx;
}
.friend-list .friend-list-r .top .time {
        float: right;
        font-size: 24rpx;
        color: rgba(39, 40, 50, 0.4);
        line-height: 50rpx;
}
.friend-list .friend-list-r .information {
      font-size: 28rpx;
      color: rgba(39, 40, 50, 0.6);
      line-height: 40rpx;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
      overflow: hidden;
}

